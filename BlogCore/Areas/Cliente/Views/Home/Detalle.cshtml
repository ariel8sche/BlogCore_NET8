@model BlogCore.Models.Articulo

@{
    ViewData["Title"] = "Detalle";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="row g-0">

            <!-- Imagen -->
            <div class="col-md-5">
                <img src="@Model.urlImagen"
                     class="img-fluid rounded-start h-100 object-fit-cover"
                     alt="@Model.Nombre">
            </div>

            <!-- Información -->
            <div class="col-md-7">
                <div class="card-body p-5 d-flex flex-column h-100">

                    <h2 class="card-title fw-bold mb-3">
                        @Model.Nombre
                    </h2>

                    <hr class="mb-4"/>

                    <p class="card-text fs-5 text-muted flex-grow-1">
                        @Model.Descripcion
                    </p>

                    <!-- Botones -->
                    <div class="mt-4">
                        <a asp-action="Index" 
                           class="btn btn-outline-secondary me-2">
                            Volver
                        </a>

                        @* <a asp-action="Edit" 
                           asp-route-id="Id"
                           class="btn btn-warning">
                            Editar
                        </a> *@
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>
