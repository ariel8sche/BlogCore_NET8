@model IEnumerable<BlogCore.Models.ApplicationUser>

@{
    ViewData["Title"] = "Lista de Usuarios";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-8">
            <h2 class="text-primary">Lista de Usuarios</h2>
        </div>

        <div class="col-4">
            <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-info">
                <i class="bi bi-plus"></i> Registrar nuevo usuario

            </a>
        </div>
    </div>

    <br />
    <br />

    @if (Model.Count() > 0)
    {
        <table id="tblUsuarios" class="table table-bordered table-striped" style="width: 100%">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th>Email</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                { 
                   <tr>
                       <td>@Html.DisplayFor(m => item.Id)</td>
                       <td>@Html.DisplayFor(m => item.Nombre)</td>
                       <td>@Html.DisplayFor(m => item.Email)</td>
                       <td>
                            @if (item.LockoutEnd == null || item.LockoutEnd < DateTime.Now)
                            {
                                <a class="btn btn-success text-white" asp-action="Bloquear"  asp-route-id="@item.Id">
                                    <i class="bi bi-lock">  Bloquear</i>
                                </a>
                            }
                            else
                            {
                                <a class="btn btn-danger text-white" asp-action="Desbloquear"  asp-route-id="@item.Id">
                                    <i class="bi bi-unlock">  Desbloquear</i>
                                </a>
                            }
                        </td>
                   </tr> 
                }
            </tbody>
        </table>
    }
</div>
