@{
    ViewData["Title"] = "Lista de Categorias";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-8">
            <h2 class="text-primary">Lista de Categorias</h2>
        </div>

        <div class="col-4">
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus"></i> Crear nueva categoria
        
            </a>
        </div>
    </div>

    <br />
    <br />

    <table id="tblCategorias" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Orden</th>
                <th>Fecha Creacion</th>
                <th>Acciones</th>
            </tr>
        </thead>
    </table>
</div>
@section Scripts {
    <script src="~/js/categorias.js"></script>
}
