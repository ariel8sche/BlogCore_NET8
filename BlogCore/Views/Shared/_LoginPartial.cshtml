@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav d-flex align-items-center ms-auto me-3">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item ">
        <p class="text-white mb-0">Hola @User.Identity?.Name!</p>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "Cliente" })">
            <button  type="submit" class="nav-link btn btn-link text-white">Salir</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Register">Registrar</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Login">Acceder</a>
    </li>
}
</ul>
